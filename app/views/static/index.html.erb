<div class="container-lg text-center">
  <div class="container-xl bg-light" style="border-radius: 5px;">
	  <h1 style="padding: 70px;">Bienvenue sur le site de potin numero 1</h1>
  </div>
	 <div class="row">
    <% puts @gossips %>
    <% @gossips.each do |gossip| %>
	<div class="col-sm-4" style="padding: 15px;;">
		<div class="card">
          <div class="card-header bg-light">
            <h2><%= gossip.title %></h2>
          </div>
          <div class="card-body">
            <h3 class="card-title">A été écrit par <%= gossip.user.first_name %></h3>
          </div>
          <div class="card-footer">
            <%= link_to "Accéder au potin", "gossip/" + gossip.id.to_s, :class=>"btn btn-lg btn-primary" %>
          </div>
        </div>
	</div>
    <% end %>
</div>
