<div class="container" style="border-radius: 5px;">
	<div class="row justify-content-center">
		<div class="card">
        	<h3 class="card-header text-center">Editer le potin</h3>
			<%= form_for @gossip do |f| %>
    		<div class="card-body">
				<div class="form-group">
					<label for="titre" class="form-label mt-4">Titre</label>
					<%= f.text_field :title, class: 'form-control form-control-lg' %>
				</div>
				<div class="form-group">
					<label for="contenu" class="form-label mt-4">Contenu</label>
					<%= f.text_area :content, class: 'form-control' %>
				</div>
				<div class="row justify-content-center">
					<button type="submit" class="btn btn-primary" style="width: 300px; margin-top: 20px;">Modifier les éléments</button>
				</div>
   			</div>
			<% end %>
		</div>
	</div>
</div>

