<% if flash[:wrong] %>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <strong><%= flash[:wrong] %></strong>
</div>
<% end %>

<div class="container" style="border-radius: 5px;">
	<div class="row justify-content-center">
		<div class="card">
        	<h3 class="card-header text-center">Connexion</h3>
    		<div class="card-body">
				<%= form_tag url_for(action: 'create'),  method: 'post' do%>
					<label class="form-label mt-4">Adresse email</label>
					<%= email_field_tag 'email', nil, class: "form-control" %>
					<label class="form-label mt-4">Mot de passe</label>
					<%= password_field_tag 'password', nil, class: "form-control" %>
				<div class="row justify-content-center">
					<%= submit_tag "Se connecter", class: "btn btn-primary", style: "width: 300px; margin-top: 20px;" %>
				</div>
				<% end %>
   			</div>
		</div>
	</div>
</div>

